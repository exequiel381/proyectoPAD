@{
    ViewBag.Title = "cuenta";
}

<h2>@ViewBag.dni</h2>

@model IEnumerable<proyPADMVC.cuenta>


<div>


    <div class="container">



        <div class="row justify-content-center">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Año</th>
                        <th scope="col">Concepto</th>
                        <th scope="col">Importe</th>
                        <th scope="col">Su pago</th>
                        <th scope="col">Saldo</th>
                        <th scope="col">Estado</th>
                        -<th scope="col">Realizar Pago</th> 
                    </tr>
                </thead>
                <tbody>

                    @foreach (var c in Model)
                    {
                        if (c.saldo != 0)
                        {


                    <tr>
                        <th scope="row">@c.anio</th>
                        <td>@c.concepto.concepto1</td>
                        <td>@c.concepto.importe</td>
                        <td>@c.supago</td>
                        <td>@c.saldo</td>
                        <td><span class="badge badge-danger">Adeuda</span></td>
                        <!--<td><button type="button" class="btn btn-link">Pagar</button></td>-->
                        <td>@Html.ActionLink("Pagar", "Pagar", "Pagos" ,new { id =c.idCuenta, legajo=ViewBag.legajo }, htmlAttributes:null) |</td>





                    </tr>
                        }
                        else
                        {


                <tr>
                    <th scope="row">@c.anio</th>
                    <td>@c.concepto.concepto1</td>
                    <td>@c.concepto.importe</td>
                    <td>@c.supago</td>
                    <td>@c.saldo</td>
                    <td><span class="badge badge-primary">No Adeuda</span></td>
                    <td>@Html.ActionLink("Comprobante", "EnviarComprobante", new { id = c.idCuenta }) |</td><!--"Nombre boton, metodo , Controlador(como es una vista que esta en home no hace falta)"-->
                </tr>
                        }



                    }


                </tbody>


            </table>

        </div>

    </div>

</div>








